Se precisar de ajuda pra colar no GitHub, me avisa!form.addEventListener('submit', function(e) {
      e.preventDefault();

      const tipoMovel = document.getElementById('tipoMovel').value;
      const altura = parseFloat(document.getElementById('altura').value);
      const largura = parseFloat(document.getElementById('largura').value);
      const profundidade = parseFloat(document.getElementById('profundidade').value);
      const material = document.getElementById('material').value;
      const quantidade = parseInt(document.getElementById('quantidade').value);

      if (!tipoMovel || !altura || !largura || !profundidade || !material || !quantidade) {
        alert('Preencha todos os campos corretamente.');
        return;
      }

      // Calcula volume em cm³
      const volume = altura * largura * profundidade;

      // Calcula preço estimado
      let precoUnitario = volume * precoMaterial[material];
      // Acrescente 20% para mão de obra
      precoUnitario *= 1.2;

      const precoTotal = precoUnitario * quantidade;

      resultadoDiv.style.display = 'block';
      resultadoDiv.innerHTML = `
        <h2>Orçamento Estimado</h2>
        <p><strong>Tipo do móvel:</strong> tipoMovel.charAt(0).toUpperCase() + tipoMovel.slice(1)</p>
        <p><strong>Material:</strong>{material.toUpperCase()}</p>
